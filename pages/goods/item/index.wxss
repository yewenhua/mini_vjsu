page, .page{
    height: 100%;
}
.page__bd{
    overflow: auto;
    box-sizing: border-box;
    height: 100%;
    padding:0rpx;
}
.goods-info{
    background-color: #fff;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
}
.goods-info  .thumb{
    width: 100%;
    height: 750rpx;
    background: #f9f9f8;
    position: relative;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    border-radius: 10rpx 10rpx 0 0;
}
.goods-info  .thumb .main_pic{
    width: 100%;
}
.sku-content{
    position: absolute;
    left: 0;
    bottom:0;
    width: 100%;
    height: 100rpx;
    background: rgba(0,0,0,0.3);
    display: flex;
    justify-content: center;
    align-items: center;
}
.sku-content .item{
    display: inline-block;
    margin: 0 20rpx;
    width: 60rpx;
    height: 60rpx;
}
.item_pic{
    width: 100%;
    height: 100%;
}
.goods-info .info{
    color: #555;
    padding: 20rpx 30rpx;
    line-height: 28rpx;
    font-size: 24rpx;
}
.info .item{
    border-bottom: 2rpx solid #f8f8f8;
    height: 70rpx;
    line-height: 70rpx;
}
.info .item:last-child{
    border: none;
}
.info .item.select{
    position: relative;
}
.info .item.select:after{
    content: '';
    position: absolute;
    right:30rpx;
    top:50%;
    width: 16rpx;
    height: 16rpx;
    border-right: 2rpx solid #d2d2d2;
    border-bottom: 2rpx solid #d2d2d2;
    transform: rotate(-45deg) translateY(-50%);
}
.goods-info .info text{
    color: #777;
}
.goods-info .info .other{
    margin-top: 30rpx;
    text-align: center;
}
.goods-info .info .other text{
    padding: 0 10rpx;
}
.details{
    padding: 30rpx 0;
    padding-bottom: 100rpx;
}
.details .title{
    text-align: center;
    position: relative;
    margin-bottom: 30rpx;
    margin-top: 20rpx;
    height: 50rpx;
    line-height: 50rpx;
}
.details .title .about{
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 90px;
    z-index: 99;
    background: #F7F7F7;
}
.details .title:after{
    content: '';
    border-bottom: 2rpx solid #d2d2d2;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
}
.details .desc{
    min-height: 300rpx;
}
.details button{
    width: 600rpx;
    height: 108rpx;
    color: #fff;
    font-size: 36rpx;
    font-weight: 400;
    line-height: 108rpx;
    text-align: center;
    background-image: linear-gradient(90deg, #7C92FF 0%, #22A3FE 100%);
    border-radius: 200rpx;
    margin-top: 60rpx;
}

.open-device{
    width: 100%;
    position: fixed; 
    bottom:-1000rpx;
    left: 0%;
    margin-left: 0px;
    background-color: #fff;
    transition: all 0.2s ease-in-out;  
    z-index: 9999999;
    border-radius: 0px;
    padding-bottom: 128rpx;
}
.mask{
    width: 100%;
    height: 100%;
    background: #000;
    opacity: 0.6;
    position: fixed;
    left: 0rpx;
    top: 0rpx;
    z-index: 99;
}
.size{
    padding: 20rpx 30rpx;
    padding-bottom:30rpx;
    padding-top: 10rpx;
}
.size .title{
    color: #999;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    text-align: center
}
.size .detail{
    color: #333;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 20rpx;
}
.size .detail .item{
    margin-bottom: 30rpx;
    box-sizing: border-box;
    padding: 20rpx 10rpx;
    text-align: center;
    background: #fff;
    border-radius: 4rpx;
    font-size: 24rpx;
    width:calc( 50% - 10rpx );
    border: 2rpx solid #dddddd;
    color: #777777;
}
.size .detail .item:nth-child(odd){
    margin-right: 10rpx;
}
.size .detail .item:nth-child(even){
    margin-left: 10rpx;
}
.size .detail .item.active{
    background: #F3F6FF;
    border: 2rpx solid #22A3FE;
    color: #22A3FE;
    position: relative;
}
.size .detail .item.active:before{
    content: '';
    position: absolute;
    right:0;
    bottom:0;
    width: 0;
    height:0;
    border-right: 22rpx solid #22A3FE;
    border-left: 22rpx solid transparent;
    border-top: 18rpx solid transparent;
    border-bottom: 18rpx solid #22A3FE;
}
.size .detail .item.active:after{
    content: '';
    position: absolute;
    right:8rpx;
    bottom:6rpx;
    width: 8rpx;
    height: 16rpx;
    border-right: 2rpx solid white;
    border-bottom: 2rpx solid white;
    transform: rotate(45deg);
}
.count{
    padding: 28rpx;
    display: flex;
    flex-direction: row;
}
.count .title{
    color: #333;
    font-size: 28rpx;
    height: 84rpx;
    line-height: 84rpx;
}
.operate{
    width: 100%;
    height: 128rpx;
    line-height: 128rpx;
    text-align: center;
    color: white;
    font-size: 36rpx;
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: white;
}
.operate .btn{
    font-size: 32rpx;
    background-image: linear-gradient(90deg, #7C92FF 0%, #22A3FE 100%);
    border-radius: 5px;
    width: calc( 100% - 60rpx );
    height: 88rpx;
    line-height: 88rpx;
}
.detail-image{
    width: 100%;
    display: block;
    margin: 0;
}
.sub-order{
    width: 100%;
    height: 128rpx;
    line-height: 128rpx;
    text-align: center;
    color: white;
    font-size: 36rpx;
    position: fixed;
    z-index: 999999;
    left: 0rpx;
    bottom: 0rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: white;
}
.sub-order .btn{
    font-size: 32rpx;
    background-image: linear-gradient(90deg, #7C92FF 0%, #22A3FE 100%);
    border-radius: 5px;
    width: calc( 100% - 60rpx );
    height: 88rpx;
    line-height: 88rpx;
}
.sb-hover .btn{
    background: #22A3FE;
}
.num{
    display: flex;
    margin-top: 6rpx;
    height: 84rpx;
    width: 200rpx;
    text-align: center;
    line-height: 84rpx;
    border: 1rpx solid #e9e9e9;
    font-size: 28rpx;
}
.num .nownum{
    width: 120rpx;
    border-left: 1rpx solid #e9e9e9;
    border-right: 1rpx solid #e9e9e9;
    font-size: 24rpx;
}
.disnum, .addnum{
    width: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
swiper{
    width: 100%;
    height: 750rpx;
}
swiper-item image{
    width: 100%;
    height: 100%;
}