page{
  height: 100%;
  width: 100%;
}
.m-page{
  padding: 30rpx;
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  overflow: auto;
  padding-bottom:120rpx;
}
.bold-title{
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}
.subtitle{
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}
.m-img{
  width: 100%;
  height: auto;
  margin-bottom: 20rpx;
}
.m-img image{
  height: 100%;
  width: 100%;
  display: block;
}
.details{
    width:100%;
    height:128rpx;
    line-height:128rpx;
    text-align:center;
    color:white;
    font-size:36rpx;
    position:fixed;
    z-index:999999;
    left:0rpx;
    bottom:0rpx;
    display:flex;
    justify-content:center;
    align-items:center;
    background:white;
}
.details .btn{
    width: calc( 100% - 60rpx );
    height: 88rpx;
    color: #fff;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 88rpx;
    text-align: center;
    background-image: linear-gradient(90deg, #7C92FF 0%, #22A3FE 100%);
    border-radius: 5px;
    border: none;
}
.sb-hover{
    background: #22A3FE;
}